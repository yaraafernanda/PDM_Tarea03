<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iteso.pdm_scrollabletabs.ActivitySplash"
    android:background="#2c64af">
    <TextView
        android:id="@+id/activity_splash_text"
        android:text="@string/welcome"
        android:textSize="@dimen/text"
        android:textStyle="bold"
        android:padding="@dimen/splash_padding"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"/>

    <ProgressBar
        android:layout_width="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_splash_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_margin" />

</RelativeLayout>
